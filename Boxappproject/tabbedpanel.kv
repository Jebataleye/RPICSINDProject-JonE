        Rectangle:
            source: "sfy2.png"
            size: 40,38
            pos: self.pos[0]+32,self.pos[1]+2

<Scatterwid>:
    canvas:
        Color:
            rgb: .8, .5, .4
        Rectangle:
            size: self.size
            pos: self.pos
<Scatter>:
    on_size: self.center = win.Window.center
    width: texts.size[0]
    height: texts.size[1]-60
    size_hint: None, None
    pos: 100,100
    center_y: 200
     
    canvas:
        Color:
            rgba: (130, 176, 174,1)
        Rectangle:
            group: "rect"
            size: self.size
            pos: 0,0
    Label:
        id: textsb
    Label:
        id: texts
        pos: textsb.pos[0],textsb.pos[1]-30
        text: "goodevening"
        color: 255,255,255
        center_y: self.center_y
        

<DragLabel>:
    
    size_hint: .5,1
    # Define the properties for the DragLabel
    drag_rectangle: self.x-40, self.y-15, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 0
    



        
